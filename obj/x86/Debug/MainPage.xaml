<Page
    x:Class="uwp_kiosk.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwp_kiosk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <Button x:ConnectionId='1'                           Content="Select a file"/>
        <TextBlock x:ConnectionId='2' Name="filePick"/>
        <TextBlock x:ConnectionId='3' Name="fileInfo"/>
        <TextBlock x:ConnectionId='4' Name="message"/>
    </StackPanel>
</Page>

